\usetikzlibrary{calc}
\begin{tikzpicture}[>=latex]
\draw[->] (-.5,0) -- (4,0);
\draw[->] (0,-.5) -- (0,1);
\draw[shift={(45:-.3)}] (1,0) -- +(45:.6);
\draw[shift={(45:-.3)}] (3,0) -- +(45:.6);
\draw[dashed] (1,0) +(45:.3) to[out=45,in=225] ($(3,0) +(45:-.3)$);
\fill[blue] (1,0) circle (1pt) node[below] {$a$};
\fill[blue] (3,0) circle (1pt) node[below] {$b$};
\end{tikzpicture}